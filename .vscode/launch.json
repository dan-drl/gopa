{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Gopa",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "args": ["-ldflags","-s","-gcflags '-m -m'"],
            "env": {
                "GOPATH":"/go/src/github.com/infinitbyte/gopa:/go/src/github.com/infinitbyte/gopa/vendor:/go", 
                "CGO_ENABLED":"1",
                "GO15VENDOREXPERIMENT":"1"
            }
        }
    ]
}